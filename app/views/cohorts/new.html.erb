<h1>New Cohort for <%= @course.name %></h1>

<%= form_for([@course, @cohort]) do |f| %>
<!-- use the array here because it's a form and it's nested - you need the company to get to the dept -->
<label> Name</label><%= f.text_field :name %><br>
<label> Description</label><%= f.text_field :description %><br>
<label>Start Date:</label>
<%= f.date_select :start_date, required: true %><br>
<label>End Date:</label>
<%= f.date_select :end_date, required: true %><br>
<p>
<label>Instructor:</label><%= f.collection_select :instructor, @instructor, :id, :full_name, {include_blank: true} %><br>

<%= f.submit 'Create Cohort' %>
</p>
<% end %>
