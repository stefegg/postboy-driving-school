<section class='reg'>
<h1> Apply to be a new Student </h1>
<%= form_for([@course, @student]) do |f| %>
<p><label>First Name: </label><%= f.text_field :name %></p>
<p><label>Last Name: </label><%= f.text_field :last_name %></p>
<p><label>Email: </label><%= f.email_field :email, required: true %></p>
<p><label>Street Address: </label><%= f.text_field :address, required: true %></p>
<p><label>City: </label><%= f.text_field :city, required: true %> <label>State: </label><%= f.text_field :state, required: true %><label>Zip Code: </label><%= f.text_field :zip, required: true%>
<p><label>Age </label><%= f.text_field :age, placeholder: 'Age'  %></p>
<p><%= f.label :photo, 'Upload a photo' %>
<%= f.file_field :photo %></p>
<p><label>Education: </label><%= f.select :education, [["Walking", "Walking"], ["Bike Riding", "Bike Riding"], ["Taking the Bus", "Taking the Bus"]], required: true %></p>
<p><label>Cohort: </label><%= f.collection_select :cohort_id, @course.cohorts, :id, :name, {include_blank: true} %></p>
<p><label>Tell us a little about why you want to take this course: </label><%= f.text_area :about, required: true %></p>
<p><label>I agree to receive emails from Postboy about the course and cohort which I am inquiring about in this form</label>:
<%= f.check_box :agree, required: true %></p>

<%= f.submit 'Submit Application!' %>
<% end %>
</section>
