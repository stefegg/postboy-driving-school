<% if current_user == nil %>
<h1><%= render 'layouts/oops' %></h1>
<% else %>
<section class='profile'>
<h1>New Cohort for <%= @course.name %></h1>

<%= form_for([@course, @cohort]) do |f| %>
<!-- use the array here because it's a form and it's nested - you need the company to get to the dept -->
<p><label>Name: </label><%= f.text_field :name %></p>
<p><label>Description: </label><%= f.text_field :description %></p>
<p><label>Start Date: </label><%= f.date_select :start_date, required: true %></p>
<p><label>End Date: </label><%= f.date_select :end_date, required: true %></p>
<p><label>Instructor:</label><%= f.collection_select :instructor, @instructor, :full_name, :full_name, {include_blank: true} %></p>

<%= f.submit 'Create Cohort' %>

<% end %>
<% end %>
</section>
