<% if current_user == nil %>
<h1><%= render 'layouts/oops' %></h1>
<% else %>
<section class='reg'>
<h1>Create a New Course</h1>

<%= form_for(@course) do |f| %>
<p><label> Course Name: </label><%= f.text_field :name, required: true  %></p>
<p><label> Course Description: </label><%= f.text_area :description, required: true  %></p>
<p><label>Course Hours: </label><%= f.select :hours, [[8, 8], [16, 16], [24, 24]], required: true %></p>
<p><label>Course Reward: </label><%= f.select :reward, [["Safety Certificate", "Safety Certificate"], ["Bus Driver Proficiency", "Bus Driver Proficiency"], ["Automobile Driver's Proficiency", "Automobile Driver's Proficiency"]], required: true %></p>
<p><label> Course Cost: </label><%= f.text_field :cost, required: true  %></p>
<%= f.submit 'Register Course' %>
<% end %>
<% end %>
</section>
